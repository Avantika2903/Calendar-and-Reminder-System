#!/bin/bash

PINK='\033[1;35m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

REMINDER_FILE="reminders.txt"

view_calendar() {
read -p "Enter year: " year
cal "$year"
}

add_reminder() {
echo "Enter date (DD-MM-YYYY): "
read date
echo "Enter event: "
read event
echo "$date : $event" >> "$REMINDER_FILE"
echo -e "${GREEN}Reminder added successfully!${NC}"
}

view_reminders() {
if [[ -f "$REMINDER_FILE" && -s "$REMINDER_FILE" ]]; then
echo -e "${YELLOW}--- Your Reminders ---${NC}"
cat "$REMINDER_FILE"
else
echo -e "${RED}No reminders found.${NC}"
fi
}

delete_reminder() {
if [[ ! -f "$REMINDER_FILE" ]]; then
echo -e "${RED}No reminders to delete.${NC}"
return
fi
read -p "Enter date of reminder to delete (DD-MM-YYYY): " date
grep -v "$date" "$REMINDER_FILE" > temp.txt && mv temp.txt "$REMINDER_FILE"
echo -e "${YELLOW}If a reminder with that date existed, it has been deleted.${NC}"
}

while true; do
echo -e "${PINK}==========================================${NC}"
echo -e "${PINK}     ðŸŒ¸ Calendar & Reminder System ðŸŒ¸      ${NC}"
echo -e "${PINK}==========================================${NC}"
echo
echo -e "Today's date and time: ${YELLOW}$(date)${NC}"
echo
echo -e "${GREEN}1.${NC} View Calendar"
echo -e "${GREEN}2.${NC} Add Reminder"
echo -e "${GREEN}3.${NC} View Reminders"
echo -e "${GREEN}4.${NC} Delete Reminder"
echo -e "${GREEN}5.${NC} Exit"
echo
read -p "Enter your choice: " choice

case $choice in
1) view_calendar ;;
2) add_reminder ;;
3) view_reminders ;;
4) delete_reminder ;;
5) echo -e "${PINK}Exit! Have a lovely day !${NC}"; exit ;;
*) echo -e "${RED}Invalid choice! Please try again.${NC}" ;;
esac
echo
read -p "Press Enter to continue..."
done
